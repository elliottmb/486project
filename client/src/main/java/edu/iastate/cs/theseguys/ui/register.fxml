<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="375.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.iastate.cs.theseguys.ui.RegisterController">
    <children>
        <GridPane alignment="CENTER" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
                  AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <TextField fx:id="username" GridPane.columnIndex="1"/>
                <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <PasswordField fx:id="passwordCheck" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label text="Username" GridPane.halignment="RIGHT">
                    <padding>
                        <Insets right="20.0"/>
                    </padding>
                </Label>
                <Label text="Password" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                    <padding>
                        <Insets right="20.0"/>
                    </padding>
                </Label>
                <Label text="Password (again)" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
                    <padding>
                        <Insets right="20.0"/>
                    </padding>
                </Label>
                <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0"
                      GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <children>
                        <Button fx:id="register" mnemonicParsing="false" onAction="#register" text="Register"/>
                        <Button fx:id="cancel" mnemonicParsing="false" onAction="#cancel" text="Cancel"/>
                    </children>
                </HBox>
                <Label fx:id="error" GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
